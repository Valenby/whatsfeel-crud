<!DOCTYPE html>
<html lang="es" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title>MULTI FORMULARIO</title>
      <link rel="stylesheet" href="http://localhost:5000/css/login.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
      <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> 
      <script src="sweetalert2.min.js"></script>
      <link rel="stylesheet" href="sweetalert2.min.css">
   </head>
   <body>
      <div class="container">
         <header> WHATSFEEL</header>
         <div class="progress-bar">
         <div class="form-outer">
            <form action="#">
               <div class="page slide-page">
                  <div class="title">
                    <center>LOGIN</center>
                  </div>
                  <div class="field">
                     <div class="label">
                        Correo Electronico
                     </div>
                     <input type="text" id="usuario" required  placeholder="Ingresa tu correo">
                  </div>
                  <div class="field">
                     <div class="label">
                        Contraseña
                     </div>
                     <input type="password" id="contrasena" required placeholder="Ingresa tu contraseña">
                  </div>
                  <div class="field">
                     <button  onclick="ingresar()">Ingresar</button>
                  </div>
               </div>
            </form>
         </div>
      </div>
      
      <script >
         function ingresar(){
            let usuario = document.querySelector("#usuario").value;
            let contrasena = document.querySelector("#contrasena").value;
            if(usuario.length == 0 || contrasena.length == 0 ) {
               alert("Ingresa los campos")
            }
            else {
               swal({type: "success",
                    title: "Iniciado Sesion Correctamente",
                    text: "Bienvenido"
                }).then(function() {
				    window.location = "http://localhost:5000/ruta";
               });
            }
         }
      </script>
      
   </body>